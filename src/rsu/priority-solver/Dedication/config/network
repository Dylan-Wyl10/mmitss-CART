config interface loopback			# network name
	option ifname	lo			# interface name
	option proto	static			# 'static'/'dhcp' assign static IP address or get from DHCP server
	option ipaddr	127.0.0.1		# IPv4 address, comment out if not needed
	option netmask	255.0.0.0		# IPv4 netmask, comment out if not needed

config interface lan				# network name
	option ifname 	'eth0'			# interface name
	option proto	'static'		# 'static'/'dhcp' assign static IP address or get from DHCP server
	option ipaddr	'10.254.56.26'		# IPv4 address, comment out if not needed
	option netmask	'255.255.255.0'		# IPv4 netmask, comment out if not needed
#	option ip6addr1 '2001:100::1/64'        # IPv6 address 1, comment out if not needed
	option ip6addr1 '2001:470:e0fb:1111::4444/64'        # IPv6 address 1, comment out if not needed
	option ip6gw    '2001:470:e0fb:1111::aaaa'        # IPv6 default GW, comment out if not needed
#	option ip6addr2 '2001:200::1/64'        # IPv6 address 2, comment out if not needed
	#option dns      '192.168.0.1'		# DNS server, comment out if not needed
	option gateway	'10.254.56.1'		# Default gateway, comment out if not needed

config interface dsrcnet0			# network name - DSRC 0
	option ifname 	'ath0'			# interface name
	option proto	'static'		# 'static'/'dhcp' assign static IP address or get from DHCP server
	option ip6addr1 '2001:470:e0fb:4444::1/64'        # IPv6 address 1, comment out if not needed
	option ipaddr	'192.168.1.26'	# IPv4 address, comment out if not needed
	#option netmask	'255.255.255.0'		# IPv4 netmask, comment out if not needed
	option broadcast '192.168.1.255'

config interface dsrcnet1			# network name - DSRC 1
	option ifname 	'ath1'			# interface name
	option proto	'static'		# 'static'/'dhcp' assign static IP address or get from DHCP server
	#option ip6addr1 '2001:470:e0fb:4444::1/64'        # IPv6 address 1, comment out if not needed
	option ipaddr	'192.168.101.26'	# IPv4 address, comment out if not needed
	option netmask	'255.255.255.0'		# IPv4 netmask, comment out if not needed
	option broadcast '192.168.101.255'
